<robot>
	<subsystem>
		<id>drivetrain</id>
		<components>
			<motor>
				<id>left</id>
				<port>0</port>
				<type>spark</type>
			</motor>
			<motor>
				<id>right</id>
				<port>1</port>
				<type>spark</type>
			</motor>
		</components>
	</subsystem>
	<subsystem>
		<id>piston</id>
		<components>
			<double_solenoid>
				<id>dsol</id>
				<portOn>4</portOn>
				<portOff>5</portOff>
			</double_solenoid>
		</components>
	</subsystem>
	<subsystem>
		<id>valve</id>
		<components>
			<solenoid>
				<id>sol</id>
				<port>3</port>
			</solenoid>
		</components>
	</subsystem>
	<actions>
		<action>
			<id>move</id>
			<use>drivetrain</use>
		</action>
		<action>
			<id>fire_piston</id>
			<use>piston</use>
		</action>
		<action>
			<id>release</id>
			<use>valve</use>
		</action>
	</actions>
</robot>